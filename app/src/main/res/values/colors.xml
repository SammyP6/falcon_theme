<resources>


    <!-- General colors -->

    <!-- Main color of theme - affects top Toolbar and right side drawer background -->
    <color name="pref_theme">@color/blue</color>

    <color name="pref_theme_wallpaper_inbox">@color/dgreen</color>
    <color name="pref_theme_wallpaper_thread">@color/dgreen</color>

    <!-- Affects top Toolbar center text color-->
    <color name="pref_theme_header_primary_text_color">@color/yellow</color>
    <!-- Affects auxiliary Toolbar items (left/right) color -->
    <color name="pref_theme_header_secondary_text_color">@color/yellow</color>

    <!-- Text color for composed messages -->
    <color name="pref_theme_edittext_text_color">@color/black</color>

    <!-- Contact Picture colors -->
    <color name="pref_theme_contact_pic_color">@color/blue</color>

    <!-- Night Mode value -->
    <color name="pref_theme_night">#212121</color>
    <color name="pref_theme_edittext_text_color_night">#FFFFFF</color>
    <color name="pref_theme_header_primary_text_color_night">#FFFFFF</color>
    <color name="pref_theme_header_secondary_text_color_night">#007AFF</color>
    <color name="pref_theme_wallpaper_inbox_night">#212121</color>
    <color name="pref_theme_wallpaper_thread_night">#212121</color>



    <!-- Inbox (left pane) colors -->

    <!-- Text color of inbox names -->
    <color name="pref_theme_inbox_primary_color">@color/yellow</color>
    <!-- Text color of inbox message previews and date -->
    <color name="pref_theme_inbox_secondary_color">@color/yellow</color>


    <!-- Night Mode values -->
    <color name="pref_theme_inbox_primary_color_night">#FFFFFF</color>
    <color name="pref_theme_inbox_secondary_color_night">#DBDDDE</color>





    <!-- Conversation (right pane) colors -->

    <!-- Bottom panel of conversation outer background -->
    <color name="pref_theme_bottom_panel_outer_color">@color/blue</color>
    <!-- Bottom panel edit text background -->
    <color name="pref_theme_bottom_panel_inner_color">@color/dgreen</color>

    <!-- Floating Action Button color -->
    <color name="pref_theme_fab_color">@color/yellow</color>

    <!-- Text color of attach button -->
    <color name="pref_theme_attach_text_color">@color/yellow</color>
    <!-- Text color of send button -->
    <color name="pref_theme_send_text_color">@color/black</color>


    <!-- Text color of sent messages-->
    <color name="pref_theme_sent_primary_text_color">@color/yellow</color>
    <!-- Text color of date text for sent messages -->
    <color name="pref_theme_sent_secondary_text_color">@color/yellow</color>

    <!-- Text color of received messages -->
    <color name="pref_theme_received_primary_text_color">@color/yellow</color>
    <!-- Text color of date text for received messages -->
    <color name="pref_theme_received_secondary_text_color">@color/yellow</color>


    <!-- Night Mode values -->
    <color name="pref_theme_bottom_panel_outer_color_night">#D8222222</color>
    <color name="pref_theme_bottom_panel_inner_color_night">#D82F2F2F</color>
    <color name="pref_theme_attach_text_color_night">#EEEEEE</color>
    <color name="pref_theme_sent_secondary_text_color_night">#D8FFFFFF</color>
    <color name="pref_theme_received_secondary_text_color_night">#D8FFFFFF</color>


    <!-- End customizable theme values -->


</resources>